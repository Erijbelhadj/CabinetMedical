<ul class="breadcrumb">
    <li>
        <p>La liste des prise charges</p>
    </li>
    <li><a href="#" class="active">CabinetMédical</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Les <span class="semi-bold">rigimes</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a> 
                    <a href="{{ path('rigime') }}" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body ">
                <table class="table" id="example3" >
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Libelle</th>
                            <th>Type de sécurité</th>
                            <th>Patient</th>
                            <th>Ajouter par</th>
                            <th>Actions</th>
                        </tr>

                    </thead>
                    <tbody> {% for entity in entities %}
                        {% if entity.pat.us.id==app.user.id %}
                        <tr class="odd gradeX">
                            <td><i class="fa fa-plus-circle"></i></td> 


                            <td><span class="label label-important">{{ entity.libelle}}</span></td>
                            <td><span class="label label-important">{{ entity.sec.type}}</span></td>
                            <td><span class="label label-important">{{ entity.pat.us.nom}} {{ entity.pat.us.prenom}}</span></td>
  <td><span class="label label-important">{{ entity.user}} </span></td>


                            <td class="center"> 
                                <div class="visible-md visible-lg hidden-sm hidden-xs">

                                   
                                    <a href="{{ path('rigime_show', { 'id': entity.id }) }}" class="btn btn-xs   btn-primary "><i class="fa fa-share"></i></a> 
                                    
                        </tr>   
                        {% endif %}
                   {% endfor  %}
                    </tbody>
                </table>
                <a href="{{ path('rigime_new') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-info my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-plus-square">   Ajouter un rigime</i></a>
            </div>
        </div>
    </div>

</div>
<script>
    $("#test2").remove();

    </script>

 {% endblock content %}
