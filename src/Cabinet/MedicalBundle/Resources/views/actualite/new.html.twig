{% extends "CabinetMedicalBundle::adminTemplate.html.twig" %}



 {% block content %}
<link href="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/css/datatables.responsive.css')}}" rel="stylesheet" type="text/css" media="screen"/>
<script src="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/js/jquery.dataTables.min.js')}}" type="text/javascript" ></script>
<script src="{{asset('bundles/CabinetMedical/admin/plugins/bootstrap-tag/bootstrap-tagsinput.min.js')}}" type="text/javascript" ></script>
<script type="text/javascript" src="{{asset('bundles/CabinetMedical/admin/plugins/dropzone/dropzone.min.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/CabinetMedical/admin/js/form_elements.js')}}"></script>




<div class="row">
    <div class="col-md-12">
        <form action="{{ path('actualite_create') }}" method="post" {{ form_enctype(form) }}>
            <div class="grid simple">
                <div class="grid-title no-border">
                    <h4>Ajouter <span class="semi-bold">une actualité</span></h4>
                    <a href="{{ path('actualite') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-primary my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-reply-all">  Retourner à la liste</i></a>
                    <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="{{ path('actualite_new') }}" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
                </div>
                <div class="grid-body no-border"> <br>
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-xs-8">                                          

                            <div class="form-group">
                                <label class="form-label">Name</label>
                                <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.titre)}}

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Sujet</label>
                                    <span class="help"></span>
                                    <div class="controls">
                                    {{ form_widget(form.text)}}

                                        </div>
                                    </div>
                            <div class="form-group">
                                <label class="form-label">Image</label>
                                <span class="help"></span>
                                <div class="controls">
                                    {{ form_widget(form.file, { 'attr': {'style': 'width:100% '} }) }}
 
                                    </div>
                                        

                                </div>
                            
                            
                                    <script src="//cdn.ckeditor.com/4.4.7/standard/ckeditor.js"></script>
                                        <div class="clearfix"></div>									

                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> enregistrer</button>
                                        <button type="button" class="btn btn-white btn-cons">Cancel</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                                        {{ form_rest(form) }}

                </form>
            </div>
        </div>

 {% endblock content %}