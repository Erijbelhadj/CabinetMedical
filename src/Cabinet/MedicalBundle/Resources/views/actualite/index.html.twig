{% extends "CabinetMedicalBundle::adminTemplate.html.twig" %}


 {% block content %}

<link href="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/css/jquery.dataTables.css')}}" rel="stylesheet" type="text/css"/>
<link href="{{asset('bundles/CabinetMedical/admin/plugins/boostrap-checkbox/css/bootstrap-checkbox.css')}}" rel="stylesheet" type="text/css" media="screen"/>
<link href="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/css/datatables.responsive.css')}}" rel="stylesheet" type="text/css" media="screen"/>
<script src="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/js/jquery.dataTables.min.js')}}" type="text/javascript" ></script>
<script src="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/extra/js/TableTools.min.js')}}" type="text/javascript" ></script>
<script type="text/javascript" src="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/js/datatables.responsive.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/js/lodash.min.js')}}"></script>

<script src="{{asset('bundles/CabinetMedical/admin/js/datatables.js')}}" type="text/javascript"></script>


<ul class="breadcrumb">
    <li>
        <p>La liste des actualités</p>
    </li>
    <li><a href="#" class="active">CabinetMédical</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Les <span class="semi-bold">Actualité</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a> 
                    <a href="{{ path('actualite') }}" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body ">
                <table class="table" id="example3" >
                    <thead>
                        <tr>
                            <th></th>
                            <th>Titre</th>
                            <th>Contenue</th>
                            <th>Date</th>
                            <th>Image</th>
                            <th>Ajouter par</th>
                             <th>Actions</th>


                        </tr>
                    </thead>
                    <tbody> {% for entity in entities %}
                        <tr class="odd gradeX">
                            <td><i class="fa fa-plus-circle"></i></td> 
                            <td><span class="label label-important">{{ entity.titre }}</span></td>
                            <td>{{ entity.text|raw }}</td>
                            <td><span class="label label-success">{{ entity.date|date('Y-m-d H:i:s') }}</span></td>
                            <td class="center"> <img src="{{ asset("uploads/entities/") ~ entity.image  }}" alt="" width="25" height="25"></td>                           
                            <td class="center">{{ entity.user }}</td>
                            <td class="center"> 
                                <div class="visible-md visible-lg hidden-sm hidden-xs">

                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}  
      {% for role in app.user.roles %}
      {% if role =="ROLE_ADMIN" %}
            <a href="{{ path('actualite_deleteee', { 'id': entity.id }) }}" class="btn btn-xs  btn-danger" ><i class="fa fa-times fa fa-white"></i></a> </div> </td>
                                    <a href="{{ path('actualite_edit', { 'id': entity.id }) }}" class="btn btn-xs  btn-warning"><i class="fa fa-edit"></i></a> 
                                  
                                     {% endif %}
          {% endfor %}
          {% endif %}
                                    
                                   <a href="{{ path('actualite_show', { 'id': entity.id }) }}" class="btn btn-xs   btn-primary "><i class="fa fa-share"></i></a>    
                                 

                        </tr>                                   
                   {% endfor  %}
                    </tbody>
                </table>
                 
                <a href="{{ path('actualite_new') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-info my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-plus-square">   Ajouter une actualité</i></a>
            </div>
        </div>
    </div>
      
</div>
<script>
    $("#test2").remove();

    </script>

 {% endblock content %}
