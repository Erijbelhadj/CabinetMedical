</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Les <span class="semi-bold">Consultations</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a> 
                    <a href="{{ path('consultation') }}" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body ">
                <table class="table" id="example3" >
                    <thead><tr>
                         <th></th>
            <th>Name</th>
            
            <th>Traitements</th>
            <th>Type</th>
            <th>Date</th>
            <th>Diagnostique</th>
            <th>Cabinet</th>
             <th>Patient</th>
              <th>Medecin</th>
            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody> {% for entity in entities %}
                          {% if entity.medecin.usm.id==app.user.id %}
                        <tr class="odd gradeX">
                            <td><i class="fa fa-plus-circle"></i></td> 
                            <td><span class="label label-important">{{ entity.Name }}</span></td>
                            
                            
                          
                            <td><span class="">{{ entity.traitement|raw}}</span></td>
                            
                            <td><span class="label label-important">{{ entity.type }}</span></td>
                            
                            
                            <td><span class="label label-success">{{ entity.date|date('Y-m-d H:i:s') }}</span></td>
                            <td><span class="">{{ entity.conclusion|raw }}</span></td>
                              <td><span class="label label-important">{{ entity.cabinetc }}</span></td>
                          <td><span class="label label-important">{{ entity.patient.us.nom }}</span></td>
                       
                            <td class="center"> 
                                <div class="visible-md visible-lg hidden-sm hidden-xs">

                                   
                                    <a href="{{ path('consultation_show', { 'id': entity.id }) }}" class="btn btn-xs   btn-primary "><i class="fa fa-share"></i></a> 
                                    
                        </tr> 
                         {% endif  %}
                   {% endfor  %}
                    </tbody>
                </table>
                    
                     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}  
      {% for role in app.user.roles %}
      {% if  role =="ROLE_MEDECIN"  or role=="ROLE_ADMIN"%}
                    
                    
                <a href="{{ path('consultation_new') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-info my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-plus-square">   Ajouter une consultation</i></a>
            </div>
            {% endif %}
          {% endfor %}
          {% endif %}
        </div>
    </div>

</div>
