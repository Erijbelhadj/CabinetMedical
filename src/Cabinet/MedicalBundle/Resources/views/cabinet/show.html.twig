

{% extends "CabinetMedicalBundle::adminTemplate.html.twig" %}

{% block content %}

<link href="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/css/jquery.dataTables.css')}}" rel="stylesheet" type="text/css"/>
<link href="{{asset('bundles/CabinetMedical/admin/plugins/boostrap-checkbox/css/bootstrap-checkbox.css')}}" rel="stylesheet" type="text/css" media="screen"/>
<link href="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/css/datatables.responsive.css')}}" rel="stylesheet" type="text/css" media="screen"/>
<script src="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/js/jquery.dataTables.min.js')}}" type="text/javascript" ></script>
<script src="{{asset('bundles/CabinetMedical/admin/plugins/jquery-datatable/extra/js/TableTools.min.js')}}" type="text/javascript" ></script>
<script type="text/javascript" src="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/js/datatables.responsive.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/CabinetMedical/admin/plugins/datatables-responsive/js/lodash.min.js')}}"></script>

<script src="{{asset('bundles/CabinetMedical/admin/js/datatables.js')}}" type="text/javascript"></script>

<div class="row">
    <div class="col-md-6">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Détail <span class="semi-bold">Cabinet</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body no-border">    
                <a href="{{ path('cabinet') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-primary my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-reply-all">  Retourner à la liste</i></a>
                 {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}  
      {% for role in app.user.roles %}
      {% if role =="ROLE_ADMIN"%}
                <a href="{{ path('cabinet_edit', { 'id': entity.id }) }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-warning my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-edit"> Modifier la cabinet</i></a>
              {% endif %}
          {% endfor %}
          {% endif %}
                <br><br>  
                <br>
                <div class="form-group">
                    <label class="form-label"></label>
                    <h5  class="semi-bold text-black">Nom:</h5>
                    <h4><i><span class="label label-important">{{ entity.nom }}</span>
                        </i></h4>
                    <h5 class="semi-bold text-black">Adresse:</h5>
                    <strong>{{ entity.adresse }}</strong>
                    <h5 class="semi-bold text-black">Email:</h5>
                    <strong>{{ entity.email }}</strong>
                    <h5 class="semi-bold text-black">Télephone:</h5>
                    <strong>{{ entity.phone }}</strong>
                    <h5 class="semi-bold text-black">Mobile Phone:</h5>
                    <strong>{{ entity.phonem }}</strong>
                    <h5 class="semi-bold text-black">Fax:</h5>
                    <strong>{{ entity.fax }}</strong>
                    <h5 class="semi-bold text-black">Ajouter par:</h5>
                    <strong><span class="label label-success">{{ entity.user2 }}</strong><br>

                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Image <span class="semi-bold">Cabinet</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body no-border">

                <p><img style= "border: 3px solid; color: #0aa699;" src="{{ asset("uploads/entities/") ~ entity.image  }}"   alt="" width="460" height="190"></p>
                <br
                    {% for user in entity.medecin %} 
                        <a href="{{ path('medecin_edit', { 'id': user.id }) }}" data-color="rgb(255, 255, 255)"  href="#" data-colorpicker-guid="1"><i>
                        <div class="star">
                                    <input id="checkbox9" type="checkbox" value="1" checked="">
                                    <label for="checkbox9"></label>
                                </div>
 {{ user.usm.nom}} {{ user.usm.prenom}} qui a comme Spécialité {{ user.specialite}} et le numéro de télephone {{ user.usm.phone}},</i></a><br>
{% endfor %}
                <div class="clearfix"></div><br><br>
                        <a data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-primary my-colorpicker-control" href="#" data-colorpicker-guid="1">{{ entity.nom }} Ajouté par {{ entity.user2 }}</a> <br>
                        <br>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

 {% endblock content %}