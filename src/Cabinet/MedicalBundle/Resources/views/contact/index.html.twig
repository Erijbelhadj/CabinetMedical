<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Les <span class="semi-bold">Messages</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a> 
                    <a href="{{ path('contact') }}" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body ">
                <table class="table" id="example3" >
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Mail</th>
                             <th>Message</th>
                            <th>Phone</th>
                            
                            <th>Date</th>
                            <th>Op√©rations</th>

                        </tr>
                    </thead>
                    <tbody> {% for entity in entities %}
                        <tr class="odd gradeX">
                            <td><div class="star">
                                    <input id="checkbox9" type="checkbox" value="1" checked="">
                                    <label for="checkbox9"></label>
                                </div></td> 
                            <td>{{ entity.nom }}</td>
                            <td><span class="label label-important">{{ entity.mail }}</span></td>
                            <td>{{ entity.msg|raw }}</td>
                            <td class="center"><span class="label label-success">{{ entity.tel }}</span></td>
                            <td class="center">{{ entity.date|date('Y-m-d H:i:s') }} </td>
                            <td class="center"> 
                                <div class="visible-md visible-lg hidden-sm hidden-xs">

                                   
                                    <a href="{{ path('contact_show', { 'id': entity.id }) }}" class="btn btn-xs   btn-primary "><i class="fa fa-share"></i></a> 
                                    <a href="{{ path('c_deleteee', { 'id': entity.id }) }}" class="btn btn-xs  btn-danger" ><i class="fa fa-times fa fa-white"></i></a> </div> </td>

                        </tr>                                   
                   {% endfor  %}
                    </tbody>
                </table>
                <a href="{{ path('contact_new') }}" data-color="rgb(255, 255, 255)" data-color-format="hex" id="cp4" class="btn btn-info my-colorpicker-control" href="#" data-colorpicker-guid="1"><i class="fa fa-plus-square">   Ajouter un Contact</i></a>
